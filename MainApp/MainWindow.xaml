<Window x:Class="MainApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:MainApp.ViewModels"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Title="Hack Engine" Height="350" Width="525">
    <Window.DataContext>
        <viewModels:AppViewModel />
    </Window.DataContext>
    <StackPanel>
        <Button Click="ProcessSelect_OnClick">Open process</Button>
        <TextBlock Text="{Binding ProcessName}" />
        <TextBox Text="{Binding ScanValue}" />
        <ComboBox ItemsSource="{Binding Sizes}"
                  SelectedItem="{Binding Size}" />
        <Button Command="{Binding FirstScanCommand}">First scan</Button>
        <Button Command="{Binding NextScanCommand}">Next scan</Button>
        <ListBox Height="100"
                 ItemsSource="{Binding Addresses}">
            <ListBox.ItemContainerStyle>
                <Style TargetType="{x:Type ListBoxItem}">
                    <EventSetter Event="MouseDoubleClick" Handler="AddressesListBox_OnDoubleClick" />
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
    </StackPanel>
</Window>